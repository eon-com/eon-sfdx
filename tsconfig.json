{
  "compileOnSave": true,
  "compilerOptions": {
      "composite": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "inlineSourceMap": true,
      "declaration": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "ESNext",
      "lib": ["ESNext"],
      "resolveJsonModule": true,
      "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib","test"]
}
