{
  "compileOnSave": true,
  "compilerOptions": {
      "composite": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "inlineSourceMap": true,
      "declaration": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["ES2020"],
      "resolveJsonModule": true
  },
  "exclude": ["node_modules", "lib","test"]
}
